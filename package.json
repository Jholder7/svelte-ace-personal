{
  "name": "svelte-ace",
  "description": "Svelte Ace Editor component with complete TypeScript support",
  "version": "1.0.21",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "author": "Natesh Bhat",
  "svelte" : "./src/main.ts",
  "export": {
    ".": {
      "svelte": "./src/main.ts"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "publish" : "npm run build && npm publish",
    "start": "sirv public --no-clear",
    "validate": "svelte-check"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.37.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "brace": "^0.11.1",
    "sirv-cli": "^1.0.0"
  },
  "files": [
    "dist",
    "src",
    "@types"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nateshmbhat/svelte-ace.git"
  },
  "keywords": [
    "svelte",
    "Svelte3",
    "ace editor",
    "code editor",
    "ace typescript"
  ],
  "bugs": {
    "url": "https://github.com/nateshmbhat/svelte-ace/issues"
  },
  "homepage": "https://github.com/nateshmbhat/svelte-ace#readme",
  "types": "@types/index.d.ts"
}
